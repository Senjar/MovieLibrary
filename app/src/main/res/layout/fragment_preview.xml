<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/preview"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:layout_gravity="center" android:orientation="vertical"
    android:padding="10dip"
    android:weightSum="1">

    <TextView
        android:id="@+id/previewTextImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.65"
        android:background="@color/accent_material_light"
        android:gravity="center"
        android:text="null"
        android:textAlignment="center"
        android:textColor="@color/primary_text_default_material_dark"
        android:textSize="42sp" />

    <TextView
        android:id="@+id/previewTextTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="3.38"
        android:gravity="center"
        android:text="null"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/previewTextDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="null"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <RatingBar
        android:id="@+id/previewRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/previewTextTitle"
        android:layout_gravity="center"
        android:gravity="center"
        android:isIndicator="true"
        android:numStars="5"
        android:stepSize="0.05" />

    <TextView
        android:id="@+id/previewRatingText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:layout_weight="3.38"
        android:gravity="center"
        android:text="null"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.65"
        android:orientation="vertical">

        <Button
            android:id="@+id/previewOkButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="OK"
            android:textAlignment="center" />
    </LinearLayout>

</LinearLayout>